@model Employee

@{
    ViewBag.Title = Model.EmployeeId == 0 ? "Create":"Edit"  ;
}

<h2>@ViewBag.Title Employee </h2>



<form asp-action=@ViewBag.Title>
    <div asp-validation-summary=All></div>

    <label asp-for="EmployeeName" class="control-lable"></label>
    <input asp-for="EmployeeName" class="form-control">

    <label asp-for="Salary" class="control-lable"></label>
    <input asp-for="Salary" class="form-control"> 

    <label asp-for="Department" class="control-lable"></label>
    <select asp-for="DepartmentID" asp-items="@(new SelectList(ViewBag.Departments,"DepartmentId","DepartmentName"))" class="form-control">
        <option value="">Select Department</option>
    </select>

